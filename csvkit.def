Bootstrap: library
From: alpine:3.9

%labels
    Author Ian Sealy
    Version 1.0.3

%post
    apk add --no-cache build-base python3 python3-dev
    pip3 install csvkit
    apk del build-base python3-dev

%environment
    export LC_ALL=C

%apprun csvclean
    /usr/bin/csvclean "$@"

%apprun csvcut
    /usr/bin/csvcut "$@"

%apprun csvformat
    /usr/bin/csvformat "$@"

%apprun csvgrep
    /usr/bin/csvgrep "$@"

%apprun csvjoin
    /usr/bin/csvjoin "$@"

%apprun csvjson
    /usr/bin/csvjson "$@"

%apprun csvlook
    /usr/bin/csvlook "$@"

%apprun csvpy
    /usr/bin/csvpy "$@"

%apprun csvsort
    /usr/bin/csvsort "$@"

%apprun csvsql
    /usr/bin/csvsql "$@"

%apprun csvstack
    /usr/bin/csvstack "$@"

%apprun csvstat
    /usr/bin/csvstat "$@"

%apprun in2csv
    /usr/bin/in2csv "$@"

%apprun sql2csv
    /usr/bin/sql2csv "$@"

%help
    csvkit - command-line tools for converting to and working with CSV
